# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production

# Database Configuration (SQLite - local development)
DATABASE_URL=sqlite:///./src/database/app.db

# File Upload Configuration
MAX_FILE_SIZE_MB=5
UPLOAD_FOLDER=./src/uploads/receipts

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# CORS Configuration (comma-separated origins for production)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Application Settings
DEBUG=True
HOST=localhost
PORT=8000

# Security Headers
SECURE_HEADERS=True

# Subscription Settings (stored in database, but can override here)
# ANNUAL_SUBSCRIPTION_PRICE=50000
# GRACE_PERIOD_DAYS=7
# ENABLE_GRACE_PERIOD=true
# CURRENCY=YER
