# Flask Configuration
SESSION_SECRET=your-super-secret-jwt-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///src/database/app.db

# CORS Configuration (comma-separated list)
CORS_ORIGINS=*

# Security & Rate Limiting
MAX_FILE_SIZE_MB=5
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# Subscription Settings
SUBSCRIPTION_ANNUAL_PRICE=20000
SUBSCRIPTION_CURRENCY=YER
SUBSCRIPTION_GRACE_DAYS=7

# Upload & Storage Configuration
UPLOAD_MAX_MB=5
STORAGE_BACKEND=local
# For S3/MinIO storage (uncomment and configure if using)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET_NAME=complaints-uploads
# S3_REGION=us-east-1

# Email Configuration (for notifications - future feature)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@complaints.example.com

# Application Settings
APP_NAME=نظام الشكاوى الإلكتروني
APP_TIMEZONE=Asia/Aden

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# Frontend URL (for production deployment)
FRONTEND_URL=https://your-domain.com
