# Flask Configuration
SESSION_SECRET=your-super-secret-jwt-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///src/database/app.db

# CORS Configuration (comma-separated list)
CORS_ORIGINS=*

# Security & Rate Limiting
MAX_FILE_SIZE_MB=5
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# Subscription Settings
SUBSCRIPTION_ANNUAL_PRICE=20000
SUBSCRIPTION_CURRENCY=YER
SUBSCRIPTION_GRACE_DAYS=7

# Upload & Storage Configuration
UPLOAD_MAX_MB=5
STORAGE_BACKEND=local
# For S3/MinIO storage (uncomment and configure if using)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET_NAME=complaints-uploads
# S3_REGION=us-east-1

# Email Configuration (Flask-Mail - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@complaints.example.com

# SMS Configuration (Twilio - for critical notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Redis Configuration (for caching and job queue)
# If not set, system uses in-memory fallback
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# Export Configuration
EXPORT_EXPIRY_HOURS=24

# Application Settings
APP_NAME=نظام الشكاوى الإلكتروني
APP_TIMEZONE=Asia/Aden

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# Frontend URL (for production deployment)
FRONTEND_URL=https://your-domain.com
